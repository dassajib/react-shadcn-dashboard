{
  "compilerOptions": {
    "baseUrl": "src",              // ðŸ‘ˆ tells TS that "src" is the base folder
    "paths": {
      "@/*": ["*"]                 // ðŸ‘ˆ now "@/pages/Dashboard" -> "src/pages/Dashboard"
    },
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src"]
}